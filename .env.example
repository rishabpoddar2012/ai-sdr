# AI SDR Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED: OpenAI API
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# OPTIONAL: Airtable Integration
# =============================================================================
AIRTABLE_API_KEY=keyyourairtableapikey
AIRTABLE_BASE_ID=appyourbaseid
AIRTABLE_TABLE_NAME=Leads

# =============================================================================
# OPTIONAL: Google Sheets Integration
# =============================================================================
# Either provide the full JSON service account key:
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}
# Or provide a path to the JSON file:
# GOOGLE_SERVICE_ACCOUNT_PATH=./credentials/google-service-account.json
GOOGLE_SHEET_ID=your-google-sheet-id

# =============================================================================
# OPTIONAL: CRM Webhooks
# =============================================================================
HUBSPOT_WEBHOOK_URL=
SALESFORCE_WEBHOOK_URL=
CUSTOM_CRM_WEBHOOK_URL=

# =============================================================================
# OPTIONAL: Email Configuration (for daily summaries)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=AI SDR <ai-sdr@yourcompany.com>
EMAIL_TO=leads@yourcompany.com

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================
DASHBOARD_PASSWORD=admin
DASHBOARD_PORT=4010
DASHBOARD_SESSION_SECRET=change-this-to-a-random-string

# =============================================================================
# OPTIONAL: LinkedIn Credentials (for LinkedIn scraping)
# =============================================================================
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=

# =============================================================================
# OPTIONAL: Reddit API (increases rate limits)
# =============================================================================
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=AI_SDR_Bot/1.0

# =============================================================================
# PIPELINE CONFIGURATION
# =============================================================================
# Minimum score to include in exports (HOT, WARM, or ALL)
MIN_SCORE=WARM
# Maximum leads to process per source per run
MAX_LEADS_PER_SOURCE=50
# Enable deduplication
DEDUPE_ENABLED=true
# Days to keep leads in database
LEAD_RETENTION_DAYS=90

# =============================================================================
# PROXY CONFIGURATION (for scraping)
# =============================================================================
# HTTP_PROXY=http://user:pass@proxy:port
# HTTPS_PROXY=http://user:pass@proxy:port
